<h1>Work Orders</h1>

<% if current_user.role == "technician" %>
  <h2>Open Calls</h2>
  <% if @open_calls.present? %>
    <table class="table table-striped">
      <thead><tr><th>#</th><th>Customer</th><th>Status</th><th>Priority</th></tr></thead>
      <tbody>
        <% @open_calls.each do |wo| %>
          <tr>
            <td><%= link_to wo.number, work_order_path(wo) %></td>
            <td><%= wo.customer&.name || "—" %></td>
            <td><%= wo.status.present? ? wo.status.titleize : "—" %></td>
            <td><%= wo.priority.present? ? wo.priority.titleize : "—" %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">No open calls assigned.</p>
  <% end %>

  <h2>Incomplete Calls</h2>
  <% if @incomplete_calls.present? %>
    <table class="table table-striped">
      <thead><tr><th>#</th><th>Customer</th><th>Status</th><th>Priority</th></tr></thead>
      <tbody>
        <% @incomplete_calls.each do |wo| %>
          <tr>
            <td><%= link_to wo.number, work_order_path(wo) %></td>
            <td><%= wo.customer&.name || "—" %></td>
            <td><%= wo.status.present? ? wo.status.titleize : "--" %></td>
            <td><%= wo.status.present? ? wo.priority.titleize : "--" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">No incomplete calls assigned.</p>
  <% end %>

  <h2>PM Calls</h2>
  <% if @pm_calls.present? %>
    <table class="table table-striped">
      <thead><tr><th>#</th><th>Customer</th><th>Status</th><th>Priority</th></tr></thead>
      <tbody>
        <% @pm_calls.each do |wo| %>
          <tr>
            <td><%= link_to wo.number, work_order_path(wo) %></td>
            <td><%= wo.customer&.name || "—" %></td>
            <td><%= wo.status.present? ? wo.status.titleize : "—" %></td>
            <td><%= wo.priority.present? ? wo.priority.titleize : "—" %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">No PM calls assigned.</p>
  <% end %>

<% else %>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Work Orders</h2>
    <%= link_to "New Work Order", new_work_order_path, class: "btn btn-primary" if ["manager", "dispatcher", "admin"].include?(current_user.role) %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Customer</th>
        <th>Status</th>
        <th>Priority</th>
        <th>Assigned To</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @work_orders.each do |wo| %>
        <tr>
          <td><%= link_to wo.number, work_order_path(wo) %></td>
          <td><%= wo.customer&.name || "—" %></td>
          <td><%= wo.status.present? ? wo.status.titleize : "—" %></td>
          <td><%= wo.priority.present? ? wo.priority.titleize : "—" %></td>
          <td><%= wo.assigned_to&.full_name || "—" %></td>
          <td><%= wo.created_at.strftime("%Y-%m-%d") %></td>

          <!-- Actions column -->
          <td class="text-end">
            <%= link_to "View", work_order_path(wo), class: "btn btn-sm btn-outline-primary me-1" %>

            <% if policy(wo).complete? && wo.status != "completed" %>
              <form action="<%= complete_work_order_path(wo) %>"
                    method="post"
                    class="d-inline"
                    onsubmit="return confirm('Mark this work order as completed?');">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <%= hidden_field_tag :_method, "patch" %>
                <button type="submit" class="btn btn-sm btn-success">
                  Complete
                </button>
              </form>
            <% end %>

            <% if wo.status == "completed" %>
              <%= link_to "Invoice PDF",
                          invoice_work_order_path(wo, format: :pdf),
                          class: "btn btn-sm btn-outline-secondary me-1",
                          target: "_blank" %>
            <% end %>

            <% if policy(wo).destroy? %>
              <form action="<%= work_order_path(wo) %>"
                    method="post"
                    class="d-inline"
                    onsubmit="return confirm('Are you sure you want to delete this work order?');">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <%= hidden_field_tag :_method, "delete" %>
                <button type="submit"
                        class="btn btn-sm btn-outline-danger"
                        title="Delete">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
<% end %>
