<%= form_with(model: work_order, local: true) do |f| %>
  <% if work_order.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(work_order.errors.count, "error") %> prevented this work order from being saved:</h4>
      <ul>
        <% work_order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if work_order.persisted? %>
    <div class="mb-3">
      <label class="form-label">Work Order Number</label>
      <p class="form-control-plaintext"><%= work_order.number %></p>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :customer_id, "Customer", class: "form-label" %>
      <%= f.collection_select :customer_id,
                              (@customers || Customer.all),
                              :id,
                              :name,
                              { include_blank: "Select customer" },
                              { class: "form-select" } %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :assigned_to_id, "Assigned Technician", class: "form-label" %>
      <%= f.collection_select :assigned_to_id,
                              (@technicians || User.where(role: "technician")),
                              :id,
                              :email,
                              { include_blank: "Unassigned" },
                              { class: "form-select" } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= f.label :status, class: "form-label" %>
      <%= f.select :status,
                   WorkOrder::STATUSES.map { |s| [s.humanize, s] },
                   {},
                   class: "form-select" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :priority, class: "form-label" %>
      <%= f.select :priority,
                   WorkOrder::PRIORITIES.map { |p| [p.humanize, p] },
                   {},
                   class: "form-select" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :scheduled_at, "Scheduled For", class: "form-label" %>
      <%= f.datetime_select :scheduled_at, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :location, class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", work_orders_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
