<h1>Purchase Order <%= @purchase_order.number %></h1>

<div class="mb-3">
  <strong>Vendor:</strong> <%= @purchase_order.vendor_name %><br>
  <strong>Work Order:</strong> <%= @purchase_order.work_order&.number %><br>
  <strong>Status:</strong> <%= @purchase_order.status %><br>
  <strong>Total:</strong> <%= number_to_currency(@purchase_order.total_amount) if @purchase_order.total_amount %><br>
  <strong>Division:</strong> <%= @purchase_order.division&.name %>
</div>

<div class="mb-3">
  <h5>Notes</h5>
  <p><%= simple_format @purchase_order.notes %></p>
</div>

<div class="mt-3">
  <%= link_to "Back to Purchase Orders", purchase_orders_path, class: "btn btn-secondary" %>

  <% if policy(@purchase_order).update? %>
    <%= link_to "Edit", edit_purchase_order_path(@purchase_order), class: "btn btn-primary ms-2" %>
  <% end %>
</div>
