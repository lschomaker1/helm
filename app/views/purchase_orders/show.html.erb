<h1>Purchase Order <%= @purchase_order.number %></h1>

<p><strong>Work Order:</strong>
  <% if @purchase_order.work_order %>
    <%= link_to "WO ##{@purchase_order.work_order.id}", work_order_path(@purchase_order.work_order) %>
  <% end %>
</p>

<p><strong>Vendor:</strong> <%= @purchase_order.vendor_name %></p>
<p><strong>Total:</strong> <%= number_to_currency(@purchase_order.total_amount) if @purchase_order.total_amount.present? %></p>
<p><strong>Status:</strong> <%= @purchase_order.status.to_s.humanize %></p>
<p><strong>Notes:</strong><br><%= simple_format(@purchase_order.notes) %></p>
