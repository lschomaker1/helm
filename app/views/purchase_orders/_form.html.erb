<%= form_with(model: purchase_order, local: true) do |f| %>
  <% if purchase_order.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(purchase_order.errors.count, "error") %> prevented this purchase order from being saved:</h4>
      <ul>
        <% purchase_order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= f.label :number, "PO Number", class: "form-label" %>
      <%= f.text_field :number, class: "form-control" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :vendor_name, class: "form-label" %>
      <%= f.text_field :vendor_name, class: "form-control" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :work_order_id, "Work Order", class: "form-label" %>
      <%= f.collection_select :work_order_id, WorkOrder.all, :id, :number,
                              { include_blank: "None" },
                              { class: "form-select" } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= f.label :division_id, "Division", class: "form-label" %>
      <%= f.collection_select :division_id, Division.all, :id, :name,
                              { include_blank: "Select division" },
                              { class: "form-select" } %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :status, class: "form-label" %>
      <%= f.text_field :status, class: "form-control" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :total_amount, class: "form-label" %>
      <%= f.number_field :total_amount, step: 0.01, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :notes, class: "form-label" %>
    <%= f.text_area :notes, rows: 4, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", purchase_orders_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
