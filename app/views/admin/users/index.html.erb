<h1>Users</h1>

<p>
  <%= link_to "New User", new_admin_user_path, class: "btn btn-sm btn-success" %>
</p>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Division</th>
      <th>Role</th>
      <th>Apprentice?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= [u.first_name, u.last_name].compact.join(" ").presence || "(no name)" %></td>
        <td><%= u.email %></td>
        <td><%= u.division&.name %></td>
        <td><%= u.role&.titleize %></td>
        <td><%= u.is_apprentice? ? "Yes" : "No" %></td>
        <td class="text-end">
          <%= link_to "Show", admin_user_path(u), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Edit", edit_admin_user_path(u), class: "btn btn-sm btn-primary" %>
          <%= link_to "Delete", admin_user_path(u),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
