<%= form_with(model: quote, local: true) do |f| %>
  <% if quote.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(quote.errors.count, "error") %> prevented this quote from being saved:</h4>
      <ul>
        <% quote.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= f.label :number, "Quote Number", class: "form-label" %>
      <%= f.text_field :number, class: "form-control" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :customer_id, "Customer", class: "form-label" %>
      <%= f.collection_select :customer_id, @customers || Customer.all, :id, :name,
                              { include_blank: "Select customer" },
                              { class: "form-select" } %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :division_id, "Division", class: "form-label" %>
      <%= f.collection_select :division_id, Division.all, :id, :name,
                              { include_blank: "Select division" },
                              { class: "form-select" } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= f.label :status, class: "form-label" %>
      <%= f.text_field :status, class: "form-control" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= f.label :total_amount, class: "form-label" %>
      <%= f.number_field :total_amount, step: 0.01, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", quotes_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
