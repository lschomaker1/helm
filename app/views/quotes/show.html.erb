<h1>Quote <%= @quote.number %></h1>

<div class="mb-3">
  <strong>Customer:</strong> <%= @quote.customer&.name %><br>
  <strong>Status:</strong> <%= @quote.status %><br>
  <strong>Total Amount:</strong> <%= number_to_currency(@quote.total_amount) if @quote.total_amount %><br>
  <strong>Division:</strong> <%= @quote.division&.name %>
</div>

<div class="mb-3">
  <h5>Description</h5>
  <p><%= simple_format @quote.description %></p>
</div>

<div class="mt-3">
  <%= link_to "Back to Quotes", quotes_path, class: "btn btn-secondary" %>

  <% if policy(@quote).update? %>
    <%= link_to "Edit", edit_quote_path(@quote), class: "btn btn-primary ms-2" %>
  <% end %>
</div>
