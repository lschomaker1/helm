<h1>Users</h1>

<div class="card">
  <div class="card-body p-0">
    <table class="table table-striped table-hover mb-0">
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
          <th>Role</th>
          <th>Division</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <tr>
            <td><%= u.email %></td>
            <td><%= u.full_name.presence || "-" %></td>
            <td><%= u.role.to_s.titleize %></td>
            <td><%= u.division&.name || "-" %></td>
          </tr>
        <% end %>

        <% if @users.empty? %>
          <tr>
            <td colspan="4" class="text-center py-4 text-muted">
              No users yet.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Add New User", new_admin_user_path, class: "btn btn-primary" %>
</div>

